<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/darker_gray">

        <!-- Campo de resultado -->
        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:gravity="end"
            android:padding="16dp"
            android:background="@android:color/white"
            android:text="0" />

        <!-- Fila 1: Botones de control -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <Button android:id="@+id/btnClear" android:text="C" />
                <Button android:id="@+id/btnBorrar" android:text="⌫" />
                <Button android:id="@+id/btnParentesis" android:text="()" />
                <Button android:id="@+id/btnDividir" android:text="÷" />
            </TableRow>

            <!-- Fila 2: Números y Multiplicación -->
            <TableRow>
                <Button android:id="@+id/btn7" android:text="7" />
                <Button android:id="@+id/btn8" android:text="8" />
                <Button android:id="@+id/btn9" android:text="9" />
                <Button android:id="@+id/btnMultiplicar" android:text="×" />
            </TableRow>

            <!-- Fila 3: Números y Resta -->
            <TableRow>
                <Button android:id="@+id/btn4" android:text="4" />
                <Button android:id="@+id/btn5" android:text="5" />
                <Button android:id="@+id/btn6" android:text="6" />
                <Button android:id="@+id/btnRestar" android:text="-" />
            </TableRow>

            <!-- Fila 4: Números y Suma -->
            <TableRow>
                <Button android:id="@+id/btn1" android:text="1" />
                <Button android:id="@+id/btn2" android:text="2" />
                <Button android:id="@+id/btn3" android:text="3" />
                <Button android:id="@+id/btnSumar" android:text="+" />
            </TableRow>

            <!-- Fila 5: Cero, punto, potencia y igual -->
            <TableRow>
                <Button android:id="@+id/btn0" android:text="0" />
                <Button android:id="@+id/btnPunto" android:text="." />
                <Button android:id="@+id/btnPotencia" android:text="^" />
                <Button android:id="@+id/btnIgual" android:text="=" />
            </TableRow>
        </TableLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>